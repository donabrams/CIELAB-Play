fadeColor = #333
body
	font-size 11pt
header
	background-color white
	padding .5em 0
	h1
		emscale = 1.5
		font-size (100% * emscale) 
		display inline
		margin auto (1em / emscale)
	p
		text-align center
		display inline
		color fadeColor

	p+p:before
		content "\2022\0020"
		color fadeColor
footer 
	background-color white
	position absolute
	bottom 0
	width 100%
	div
		float left
		margin .25em
		padding .25em
		width 5em
		height 1em
		border 1px solid black
		border-radius 3px
		font-weight 800
	p
		text-align right
		margin .5em 1em
		color fadeColor
main
	display none
	border 1px solid black
	border-width 1px 0
aside
	.gridline
		position absolute
		display block
		text-align center
		border-bottom 1px solid black
		left 0
		&:nth-child(5n)
			border-width 2px
	.vert
		-webkit-transform rotateZ(90deg)
		-webkit-transform-origin 0 100%
		height 10px;
		margin-top -12px
main .block
	//border 1px solid black
	//margin 3px
	display inline-block